<UserControl x:Class="AgendaDashboard.Controls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="300">
    <DockPanel Height="32">
        <ToggleButton Width="32" DockPanel.Dock="Left"
                      Content="&#x2630;"
                      ToolTip="Menu"
                      Checked="ToggleButton_Checked"
                      Unchecked="ToggleButton_Unchecked">
            <ToggleButton.ContextMenu>
                <ContextMenu x:Name="Menu"
                             Closed="Menu_Closed">
                    <MenuItem Header="Refresh"
                              Click="RefreshMenuItem_Click" />
                    <MenuItem Header="Lock Window" IsCheckable="True" Checked="LockMenuItem_Checked"
                              Unchecked="LockMenuItem_Unchecked" />
                    <MenuItem Header="Exit"
                              Click="ExitMenuItem_Click" />
                </ContextMenu>
            </ToggleButton.ContextMenu>
        </ToggleButton>

        <TextBlock Text="Agenda Dashboard" Foreground="White" VerticalAlignment="Center" DockPanel.Dock="Left"
                   Padding="8,0,8,0" Margin="0" />

        <Border HorizontalAlignment="Stretch" DockPanel.Dock="Left" />
    </DockPanel>

    <UserControl.Resources>
        <Style TargetType="DockPanel">
            <Setter Property="Background" Value="#FF2D2D30" />
        </Style>

        <Style TargetType="Control">
            <Setter Property="Background" Value="#FF2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4D" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type Control}}">
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4D" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ContextMenu" BasedOn="{StaticResource {x:Type Control}}" />

        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type Control}}" />
    </UserControl.Resources>
</UserControl>