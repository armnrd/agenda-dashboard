<UserControl x:Class="AgendaDashboard.Controls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="MenuButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4D" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4D" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <DockPanel Height="32"
               Background="#FF2D2D30">
        <ToggleButton x:Name="MenuButton" Width="32" DockPanel.Dock="Left"
                      Content="&#x2630;"
                      ToolTip="Menu"
                      Checked="MenuButton_Checked"
                      Unchecked="MenuButton_Unchecked"
                      WindowChrome.IsHitTestVisibleInChrome="True"
                      Style="{StaticResource MenuButton}">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </ToggleButton.Template>

            <ToggleButton.ContextMenu>
                <ContextMenu x:Name="Menu"
                             Background="#FF2D2D30"
                             Foreground="White"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             Closed="Menu_Closed">
                    <MenuItem Header="Refresh"
                              Click="RefreshMenuItem_Click" />
                    <MenuItem Header="Lock Window" IsCheckable="True" Checked="LockMenuItem_Checked"
                              Unchecked="LockMenuItem_Unchecked" />
                    <MenuItem Header="Exit"
                              Click="ExitMenuItem_Click" />
                </ContextMenu>
            </ToggleButton.ContextMenu>
        </ToggleButton>

        <TextBlock Text="Agenda Dashboard" Foreground="White" VerticalAlignment="Center" DockPanel.Dock="Left"
                   Padding="8,0,8,0" Margin="0" />

        <Border HorizontalAlignment="Stretch" DockPanel.Dock="Left" />
    </DockPanel>
</UserControl>