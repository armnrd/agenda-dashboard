<UserControl x:Class="AgendaDashboard.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AgendaDashboard.Controls"
             xmlns:viewModels="clr-namespace:AgendaDashboard.ViewModels"
             xmlns:views="clr-namespace:AgendaDashboard.Views"
             xmlns:utilities="clr-namespace:AgendaDashboard.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:CalendarViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <utilities:OrBooleanToVisibilityConverter x:Key="FloatButtonVisibility" />
    </UserControl.Resources>
    <Grid>
        <ScrollViewer x:Name="GcalScrollViewer"
                      VerticalScrollBarVisibility="Visible">
            <ItemsControl ItemsSource="{Binding GcalEvents}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:CalendarPanel Height="1600" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding CalendarColor}"
                                CornerRadius="4"
                                Margin="0, 0, 4, 4"
                                Padding="4"
                                HorizontalAlignment="Stretch">
                            <Border.Effect>
                                <DropShadowEffect Color="#888" BlurRadius="8" ShadowDepth="2" Opacity="0.4" />
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontSize="10" FontWeight="Medium"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding CalendarName}" FontSize="8" Foreground="DimGray"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock FontSize="8" TextTrimming="CharacterEllipsis">
                                    <Run Text="{Binding Start, StringFormat={}{0:HH:mm}}" />
                                    <Run Text=" - " />
                                    <Run Text="{Binding End, StringFormat={}{0:HH:mm}}" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <ItemsControl ItemsSource="{Binding DateLines}"
                      HorizontalAlignment="Stretch" VerticalAlignment="Top"
                      Margin="{x:Static views:CalendarView.DateLinesMargin}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="Gray" CornerRadius="0" Padding="6">
                        <TextBlock Text="{Binding}" Foreground="White" FontWeight="Bold" FontSize="12" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button x:Name="PreviousDayButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="9,0,0,9"
                Click="PreviousDayButton_Click"
                Style="{StaticResource FloatButton}">
            <Button.Content>
                <TextBlock Text="&#x23F4;" Margin="5,0,5,4">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Button.Content>
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource FloatButtonVisibility}">
                    <Binding ElementName="GcalScrollViewer" Path="IsMouseOver" />
                    <Binding ElementName="PreviousDayButton" Path="IsMouseOver" />
                    <Binding ElementName="CurrentDayButton" Path="IsMouseOver" />
                    <Binding ElementName="NextDayButton" Path="IsMouseOver" />
                    <Binding ElementName="RefreshButton" Path="IsMouseOver" />
                </MultiBinding>
            </Button.Visibility>
        </Button>

        <Button x:Name="CurrentDayButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="44,0,0,9"
                Click="CurrentDayButton_Click"
                Style="{StaticResource FloatButton}">
            <Button.Content>
                <TextBlock Text="&#x25CF;" Margin="9,0,9,4">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Button.Content>
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource FloatButtonVisibility}">
                    <Binding ElementName="GcalScrollViewer" Path="IsMouseOver" />
                    <Binding ElementName="PreviousDayButton" Path="IsMouseOver" />
                    <Binding ElementName="CurrentDayButton" Path="IsMouseOver" />
                    <Binding ElementName="NextDayButton" Path="IsMouseOver" />
                    <Binding ElementName="RefreshButton" Path="IsMouseOver" />
                </MultiBinding>
            </Button.Visibility>
        </Button>

        <Button x:Name="NextDayButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="80,0,0,9"
                Click="NextDayButton_Click"
                Style="{StaticResource FloatButton}">
            <Button.Content>
                <TextBlock Text="&#x23F5;" Margin="5,0,5,4">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Button.Content>
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource FloatButtonVisibility}">
                    <Binding ElementName="GcalScrollViewer" Path="IsMouseOver" />
                    <Binding ElementName="PreviousDayButton" Path="IsMouseOver" />
                    <Binding ElementName="CurrentDayButton" Path="IsMouseOver" />
                    <Binding ElementName="NextDayButton" Path="IsMouseOver" />
                    <Binding ElementName="RefreshButton" Path="IsMouseOver" />
                </MultiBinding>
            </Button.Visibility>
        </Button>

        <Button x:Name="RefreshButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,26,9"
                Click="RefreshButton_Click"
                Style="{StaticResource FloatButton}">
            <Button.Content>
                <TextBlock Text="&#x27F2;" Margin="6,0,6,4">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Button.Content>
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource FloatButtonVisibility}">
                    <Binding ElementName="GcalScrollViewer" Path="IsMouseOver" />
                    <Binding ElementName="PreviousDayButton" Path="IsMouseOver" />
                    <Binding ElementName="CurrentDayButton" Path="IsMouseOver" />
                    <Binding ElementName="NextDayButton" Path="IsMouseOver" />
                    <Binding ElementName="RefreshButton" Path="IsMouseOver" />
                </MultiBinding>
            </Button.Visibility>
        </Button>
    </Grid>
</UserControl>