<UserControl x:Class="AgendaDashboard.TodoistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:AgendaDashboard">
    <UserControl.Resources>
        <local:AddValueConverter x:Key="TaskWidthAdjustment" Addend="-21" />
        <local:OrBooleanToVisibilityConverter x:Key="PanelButtonVisibility" />

        <Style x:Key="PanelButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="0.8"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Border"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.5" />
                                        <DoubleAnimation Storyboard.TargetName="Border"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.8"
                                                         BeginTime="0:0:2"
                                                         Duration="0:0:0.2" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border"
                                                                       Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                            <DiscreteObjectKeyFrame KeyTime="0:0:2.7">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>True</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ListBox x:Name="ListBox"
                 ItemsSource="{Binding TodoistTasks}"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="6,8,6,8"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="4"
                            Margin="0,2"
                            Background="White"
                            CornerRadius="4"
                            BorderBrush="#DDD"
                            BorderThickness="1">
                        <DockPanel LastChildFill="True"
                                   Width="{Binding ViewportWidth,
                                   RelativeSource={RelativeSource AncestorType=ScrollViewer},
                                   Converter={StaticResource TaskWidthAdjustment}}">
                            <TextBlock Text="{Binding Content}"
                                       Margin="4,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#222"
                                       TextTrimming="CharacterEllipsis"
                                       DockPanel.Dock="Right">
                            </TextBlock>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="RefreshButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,26,9"
                Click="RefreshButton_Click"
                Style="{StaticResource PanelButton}">
            <Button.Content>
                <TextBlock Text="&#x27F2;" Margin="6,0,6,4">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Button.Content>
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource PanelButtonVisibility}">
                    <Binding ElementName="ListBox" Path="IsMouseOver" />
                    <Binding ElementName="RefreshButton" Path="IsMouseOver" />
                </MultiBinding>
            </Button.Visibility>
        </Button>
    </Grid>
</UserControl>